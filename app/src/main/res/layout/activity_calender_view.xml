<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.merpyzf.kangyuanmilk.test.CalenderViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.merpyzf.kangyuanmilk.common.widget.CalendarHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.merpyzf.kangyuanmilk.common.widget.CalendarPickerView
            android:id="@+id/calendarPickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.merpyzf.kangyuanmilk.common.widget.CalendarPickerView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue_700"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tv_show_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="3"
            />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/red_a700"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="确定"
            />



    </LinearLayout>


</RelativeLayout>
